<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servletsUsersMgmt.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterUser</servlet-name>
        <servlet-class>servletsUsersMgmt.RegisterUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>creacionBaseDatos</servlet-name>
        <servlet-class>servletsDBMgmt.CreateDB</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>creacionTablas</servlet-name>
        <servlet-class>servletsManipulacionBaseDatos.creacionTablas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowUserDB</servlet-name>
        <servlet-class>servletsDBMgmt.ShowUserDB</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateDB</servlet-name>
        <servlet-class>servletsDBMgmt.CreateDB</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateTable</servlet-name>
        <servlet-class>sevletsTablesMgmt.CreateTable</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowTables</servlet-name>
        <servlet-class>sevletsTablesMgmt.ShowTables</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowTableData</servlet-name>
        <servlet-class>sevletsTablesMgmt.ShowTableData</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowAddRegistry</servlet-name>
        <servlet-class>sevletsTablesMgmt.ShowAddRegistry</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterUser</servlet-name>
        <url-pattern>/RegisterUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>creacionBaseDatos</servlet-name>
        <url-pattern>/creacionBaseDatos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>creacionTablas</servlet-name>
        <url-pattern>/creacionTablas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowUserDB</servlet-name>
        <url-pattern>/ShowUserDB</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateDB</servlet-name>
        <url-pattern>/CreateDB</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateTable</servlet-name>
        <url-pattern>/CreateTable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowTables</servlet-name>
        <url-pattern>/ShowTables</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowTableData</servlet-name>
        <url-pattern>/ShowTableData</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowAddRegistry</servlet-name>
        <url-pattern>/ShowAddRegistry</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
